generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  CUSTOMER
  ORGANIZER
}

model Account {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  password      String
  role          UserRole
  isVeriefied   Boolean  @default(false)
  referall_code String?  @unique
  referred_by   String?
  ImgProfile    String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("account")
}
